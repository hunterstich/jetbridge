<idea-plugin>
    <id>com.hunterstich.idea.jetbridge</id>
    <name>jetbridge</name>
    <vendor>Hunter Stich</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends optional="true" config-file="jetbridge-ideavim.xml">IdeaVIM</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.hunterstich.idea.jetbridge.JetbridgeSettings"/>
        <postStartupActivity implementation="com.hunterstich.idea.jetbridge.Jetbridge"/>
        <notificationGroup id="Jetbridge notifications"
            displayType="BALLOON"
            key="notification.group.name"/>
    </extensions>

    <actions>
        <action
            id="Jetbridge.PromptAction"
            class="com.hunterstich.idea.jetbridge.JetbridgePromptAction"
            text="Jetbridge: Prompt"
            description="Send a prompt to a provider" />
        <action
            id="Jetbridge.AskAction"
            class="com.hunterstich.idea.jetbridge.JetbridgeAskAction"
            text="Jetbridge: Ask"
            description="Ask provider about the current selection" />
        <action
            id="Jetbridge.ConnectOpenCodeAction"
            class="com.hunterstich.idea.jetbridge.JetbridgeConnectOpenCodeAction"
            text="Jetbridge: Connect OpenCode"
            description="Connect to an OpenCode instance" />
        <action
            id="Jetbridge.SelectProviderAction"
            class="com.hunterstich.idea.jetbridge.JetbridgeSelectProviderAction"
            text="Jetbridge: Select Provider"
            description="Select the preferred provider" />
    </actions>
</idea-plugin>
